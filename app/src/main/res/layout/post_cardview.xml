<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="60dp"
            app:cardCornerRadius="60dp"
            android:layout_height="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView8">
        <ImageView android:layout_width="match_parent"
                   android:src="@drawable/logo"
                   android:id="@+id/post_profil_name"
                   android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Onur9848" android:textStyle="bold" android:textSize="24sp"
              android:layout_marginStart="10dp"
              android:id="@+id/post_profil_username"
              app:layout_constraintStart_toEndOf="@+id/cardView8"
              app:layout_constraintBottom_toBottomOf="@+id/cardView8"
              app:layout_constraintTop_toTopOf="@+id/cardView8"/>
    <androidx.viewpager2.widget.ViewPager2
            android:layout_width="0dp"
            android:background="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintDimensionRatio="4:3"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>