<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="20dp"
        android:id="@+id/container_training_card"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
            android:id="@+id/my_card_view"
            app:cardCornerRadius="20dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/nightSecondaryColor"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:padding="5dp"
                      android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_height="match_parent">
                <TextView
                        android:textSize="28dp"
                        android:id="@+id/day_test"
                        android:paddingHorizontal="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Day-1"/>
                <TextView
                        android:textSize="18sp"
                        android:text="Program Details"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/bg_table_radius"
                    android:textSize="14sp"
                    android:paddingVertical="10dp"
                    android:text="Start"
                    android:layout_height="wrap_content"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>